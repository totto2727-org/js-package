{
  "name": "esm-package",
  "author": "hogehoge <hogehoge@example.com>",
  "description": "esm-package template",
  "homepage": "https://github.com/totto2727-org/js-package/tree/main/template/esm-package",
  "bugs": {
    "url": "https://github.com/totto2727-org/js-package/issues"
  },
  "keywords": ["typescript"],
  "license": "MIT",
  "version": "0.1.0",
  "scripts": {
    "build": "run-z build:transpile,build:esm,build:cjs",
    "build:transpile": "bun build.mts",
    "build:esm": "tsc --project tsconfig.build.esm.json",
    "build:cjs": "tsc --project tsconfig.build.cjs.json",
    "precommit": "run-z check:type fix test build",
    "prepublish": "attw --pack ."
  },
  "files": [
    "src",
    "dist",
    "package.json",
    "../../tsconfig.json",
    "../../LICENSE"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/import/index.d.mts",
        "default": "./dist/import/index.mjs"
      },
      "require": {
        "types": "./dist/require/index.d.cts",
        "default": "./dist/require/index.cjs"
      }
    }
  }
}
